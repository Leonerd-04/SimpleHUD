{
  "schemaVersion": 1,
  "id": "simplehud",
  "version": "${version}",

  "name": "SimpleHUD",
  "description": "A simple, informational display for Minecraft",
  "authors": [
    "Ieonerd04"
  ],
  "contact": {
    "homepage": "",
    "sources": "https://github.com/Leonerd-04/SimpleHUD"
  },

  "license": "GPLv3",
  "icon": "assets/simplehud/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "me.Ieonerd.simplehud.SimpleHUD"
    ],
    "modmenu": [
      "me.Ieonerd.simplehud.SimpleHUDModMenu"
    ]
  },
  "mixins": [
    "simplehud.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric": "*",
    "minecraft": "1.19.3",
    "java": ">=17"
  },

  "suggests": {
    "modmenu": "*"
  },

  "custom": {
    "modmenu": {
      "description": "modmenu.descriptionTranslation.simplehud"
    }
  }
}
